<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:allowBackup="true"
    android:background="@color/design_default_color_background">

    <LinearLayout
        android:id="@+id/event_linear"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/event_name_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            tools:text="@string/event_text"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_date_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            tools:text="date is here" />

        <TextView
            android:id="@+id/event_place_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            tools:text="place is here" />

        <TextView
            android:id="@+id/eventAuthorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            tools:text="author is here" />

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="wrap_content"
            android:minHeight="200dp"
            android:maxHeight="300dp"
            android:layout_height="200dp"
            tools:srcCompat="@drawable/example" />

        <TextView
            android:id="@+id/event_describe_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="description is here" />

        <Button
            android:id="@+id/event_subscribe_button"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:theme="@style/regularFont"
            android:text="@string/event_subscribe_button" />

        <Button
            android:id="@+id/event_chat_button"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:theme="@style/regularFont"
            android:text="@string/button_go_to_chat" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
