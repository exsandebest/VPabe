<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:allowBackup="true"
    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background">

    <LinearLayout
        android:id="@+id/event_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/event_name_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="@string/event_text" />

        <TextView
            android:id="@+id/eventAuthorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textAlignment="textStart"
            tools:text="author is here" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/event_date_header"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAlignment="textStart"
                tools:text="date is here" />

            <TextView
                android:id="@+id/event_place_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAlignment="textStart"
                tools:text="place is here" />

        </LinearLayout>

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:maxHeight="300dp"
            android:minHeight="200dp"
            tools:srcCompat="@drawable/example" />

        <TextView
            android:id="@+id/event_describe_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"

            tools:text="description is here" />

        <Button
            android:id="@+id/event_subscribe_button"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:paddingTop="8dp"


            android:paddingBottom="10dp"
            android:text="@string/event_subscribe_button"
            android:textColor="@color/colorAccent"
            android:theme="@style/regularFont"
            app:backgroundTint="@color/colorBackgroundBack"
            app:backgroundTintMode="add"
            app:cornerRadius="8dp"
            app:iconTintMode="add" />

        <Button
            android:id="@+id/event_chat_button"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:text="@string/button_go_to_chat"
            android:textColor="@color/colorBackgroundBack"
            android:theme="@style/regularFont"
            app:backgroundTint="@color/colorAccent"
            app:cornerRadius="8dp"
            app:iconTintMode="add"  />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
