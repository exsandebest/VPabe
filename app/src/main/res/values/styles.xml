<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorBackgroundBack</item>
        <item name="colorPrimaryDark">@color/colorBackgroundFaceDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor"
            tools:targetApi="lollipop">@color/colorPrimaryDark</item>

    </style>



    <style name="lightFont" >
        <item name="android:fontFamily">@font/light</item>
    </style>
    <style name="bigFont" >
        <item name="android:fontFamily">@font/big</item>
    </style>
    <style name="largeFont" >
        <item name="android:fontFamily">@font/large</item>
    </style>
    <style name="regularFont" >
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="bigText" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="lightText" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="ImageViewTheme" parent="BlackTheme">
        <item name="colorPrimary">#3000</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BlackTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="LauncherTheme" parent="Theme.Design.NoActionBar">
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/ic_launcher_background</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
    </style>

    <style name="rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
