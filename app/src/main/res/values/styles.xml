<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyTheme.ActionBar</item>
        <item name="android:navigationBarColor">@color/colorDarkDarkGray</item>
    </style>

    <style name="MyTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="lightFont" >
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="bigFont" >
        <item name="android:fontFamily">@font/big</item>
        <item name="android:textColor">@color/colorDarkDarkGray</item>
    </style>

    <style name="largeFont" >
        <item name="android:fontFamily">@font/large</item>
    </style>

    <style name="regularFont" >
        <item name="android:textColor">@color/colorDarkDarkGray</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="ImageViewTheme" parent="BlackTheme">
        <item name="colorPrimary">#3000</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BlackTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorDarkGray</item>
        <item name="colorPrimaryDark">@color/colorDarkDarkGray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorDarkDarkGray</item>
    </style>

    <style name="LauncherTheme" parent="Theme.Design.NoActionBar">
        <item name="android:colorPrimaryDark">@color/colorDarkDarkGray</item>
        <item name="android:windowBackground">@drawable/ic_launcher_foreground_logo</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorDarkDarkGray</item>
    </style>

    <style name="rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
