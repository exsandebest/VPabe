<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_list">

    <fragment
        android:id="@+id/navigation_chats"
        android:name="yoloyoj.pub.ui.chatlist.ChatListFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chat_list" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="yoloyoj.pub.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="yoloyoj.pub.ui.profile.EditProfileFragment"
        android:label="@string/title_edit_profile"
        tools:layout="@layout/fragment_edit_profile"/>
    <fragment
        android:id="@+id/navigation_list"
        android:name="yoloyoj.pub.ui.list.EventsListFragment"
        android:label="@string/title_list" />
    <fragment
        android:id="@+id/navigation_map"
        android:name="yoloyoj.pub.ui.list.map.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />

</navigation>
